@model Login.Models.User
@{
    ViewData["Title"] = "SignIn";
}

<div class="content">
    <div class="logo">
        <img src="https://svgshare.com/i/_go.svg" alt="" />
    </div>

    <div class="image"></div>

    <div class="text">
        Start for free & get <br />
        attractive offers today !
    </div>
</div>
<form id="form" asp-action="Create" method="post">
    <div class="social">
        <div class="title">Get Started</div>
        <div class="question">
            Already Have an Account? <br />
            <span>Sign-in</span>
        </div>

        <div class="btn">
            <div class="btn-1">
                <img src="https://img.icons8.com/color/30/000000/google-logo.png" />
                Sign Up
            </div>
            <div class="btn-2">
                <img src="https://img.icons8.com/ios-filled/30/ffffff/facebook-new.png" />
                Sign Up
            </div>
        </div>
        <div class="or">Or</div>
    </div>

    <div>
        <label asp-for="Name"  for="username" class="d-block mb-1">User Name</label>
        <i class="fas fa-user"></i>

        <input type="text" asp-for="Name" name="username" id="username" placeholder="Joy Shaheb" />

        <i class="fas fa-exclamation-circle failure-icon"></i>
        <i class="far fa-check-circle success-icon"></i>

        <div class="error"></div>
    </div>
    <div>
        <label asp-for="Email" for="email">Email</label>
        <i class="far fa-envelope"></i>

        <input type="email" asp-for="Email" name="email" id="email" placeholder="abc@gmail.com" />

        <i class="fas fa-exclamation-circle failure-icon"></i>
        <i class="far fa-check-circle success-icon"></i>

        <div class="error"></div>
    </div>
    <div>
        <label asp-for="Password" for="password">Password</label>
        <i class="fas fa-lock"></i>

        <input type="password" asp-for="Password" name="password" id="password" placeholder="Password here" />

        <i class="fas fa-exclamation-circle failure-icon"></i>
        <i class="far fa-check-circle success-icon"></i>

        <div class="error"></div>
    </div>
    <button id="btn" type="submit">Submit</button>
</form>